# Azure Configuration
subscription_id     = "469b61e7-a78a-4d21-b39e-3b130e4b8e2b"
resource_group_name = "AT39473-weu-dev-d01"
aks_cluster_name    = "uk8s-tsshared-weu-gt025-int-d01"
location            = "westeurope"
environment         = "dev"

# Backup Configuration
backup_frequency = "hourly"
backup_schedule  = ["R/2024-01-01T00:00:00+00:00/PT4H"] # Every 4 hours

# Retention Configuration
retention_days           = 7
default_retention_days   = 7
enable_weekly_retention  = true
weekly_retention_weeks   = 4
weekly_retention_days    = ["Sunday"]
enable_monthly_retention = true
monthly_retention_months = 12
monthly_retention_weeks  = ["First"]

# Storage Configuration
storage_replication_type = "LRS"
backup_vault_redundancy  = "LocallyRedundant"

# Namespace Configuration for ATXXXX pattern
# Dynamically populated or manually specified
included_namespaces = [] # Empty means all namespaces

# Exclude system namespaces
excluded_namespaces = [
  "kube-system",
  "kube-public",
  "kube-node-lease",
  "dataprotection-microsoft",
  "gatekeeper-system",
  "cert-manager",
  "ingress-nginx"
]

# Resource Configuration
excluded_resource_types   = []
include_cluster_resources = false
enable_volume_snapshots   = true

# Label selectors for backup (optional)
label_selectors = []

# Additional Tags
tags = {
  "Project"     = "AKS-GitOps"
  "Owner"       = "Platform-Team"
  "CostCenter"  = "IT-Infrastructure"
  "Compliance"  = "Required"
}